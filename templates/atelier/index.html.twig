{% extends 'base.html.twig' %}

{% block title %}Atelier index
{% endblock %}

{% block body %}
	<h1>Atelier</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Libelle</th>
				<th>NbPlacesMaxi</th>
				<th>Theme(s)</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for atelier in ateliers %}
				<tr>
					<td>{{ atelier.id }}</td>
					<td>{{ atelier.libelle }}</td>
					<td>{{ atelier.nbPlacesMaxi }}</td>
					<td>
						{% for theme in atelier.desthemes %}
							{{ theme.libelle }}<br>
						{% endfor %}

					</td>
					<td>
						<a href="{{ path('atelier_edit', {'id': atelier.id}) }}">edit</a>
						<a href="{{ path('atelier_delete', {'id': atelier.id}) }}">delete</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Pas d'atelier</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a href="{{ path('ajout_atelier') }}">Create new</a>
{% endblock %}
